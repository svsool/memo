{
  "name": "markdown-memo",
  "displayName": "Markdown Memo",
  "description": "Markdown knowledge base with bidirectional [[link]]s built on top of VSCode",
  "publisher": "svsool",
  "version": "0.1.8",
  "author": "Svyatoslav Sobol <svyatoslav.sobol@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/svsool/vscode-memo"
  },
  "bugs": {
    "url": "https://github.com/svsool/vscode-memo/issues"
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "knowledge base",
    "references",
    "reference",
    "links",
    "link",
    "zettelkasten"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:memo.openRandomNote",
    "onCommand:memo.openTodayNote",
    "onCommand:memo.openReferenceInDefaultApp",
    "onCommand:_memo.openReference",
    "onCommand:_memo.cacheWorkspace",
    "onCommand:_memo.cleanWorkspaceCache",
    "onCommand:_memo.getWorkspaceCache",
    "onView:memoBacklinksExplorer"
  ],
  "main": "./dist/extension",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "commands": [
      {
        "command": "memo.openTodayNote",
        "title": "Open today's note",
        "category": "Memo"
      },
      {
        "command": "memo.openRandomNote",
        "title": "Open random note",
        "category": "Memo"
      },
      {
        "command": "memo.openReferenceInDefaultApp",
        "title": "Open link in the default app",
        "category": "Memo"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Memo",
      "properties": {
        "memo.imagePreviewMaxHeight": {
          "default": "200",
          "scope": "resource",
          "description": "The maximum height of the image preview",
          "type": "number"
        },
        "memo.useEnhancedTriggerSuggest": {
          "default": false,
          "scope": "resource",
          "description": "Requires reload. Triggers suggest also on typing other character than \"[\". But keep in mind that other autocomplete providers may contribute to the result due to that.",
          "type": "boolean"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == markdown && memo:cursorAtExistingReference",
          "group": "memo",
          "command": "memo.openReferenceInDefaultApp"
        }
      ],
      "commandPalette": [
        {
          "command": "memo.openReferenceInDefaultApp",
          "when": "editorLangId == markdown && memo:cursorAtExistingReference"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "memoBacklinksExplorer",
          "name": "Backlinks"
        }
      ]
    },
    "markdown.previewStyles": [
      "./media/fontello/css/fontello.css",
      "./media/markdown.css"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "deploy": "vsce publish --yarn",
    "package": "vsce package --yarn",
    "clean": "rimraf dist out",
    "lint": "eslint src --ext ts",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development -w",
    "pretest": "tsc -p ./ && yarn run webpack --mode development",
    "ts": "tsc --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^26.0.4",
    "@types/lodash.groupby": "^4.6.6",
    "@types/markdown-it": "^10.0.1",
    "@types/node": "^14.0.23",
    "@types/open": "^6.2.1",
    "@types/rimraf": "^3.0.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-environment-vscode": "^1.0.0",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "vsce": "^1.77.0",
    "vscode-test": "^1.3.0",
    "wait-for-expect": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "cross-path-sort": "^1.0.0",
    "lodash.groupby": "^4.6.0",
    "markdown-it": "^11.0.0",
    "markdown-it-regex": "^0.2.0",
    "open": "^7.1.0"
  }
}
